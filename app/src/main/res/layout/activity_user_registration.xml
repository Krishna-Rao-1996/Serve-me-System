<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".ServiceProviderRegistrationActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="410dp"
            android:layout_height="20dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:text="     Service Provider Registration"/>

        <EditText
            android:id="@+id/fname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="                 Enter Full Name"
            android:inputType="textPersonName"
            android:text="" />


        <EditText
            android:id="@+id/sname1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="                 Enter User Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/email1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="                     Enter Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/dob1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="                 MM/DD/YYYY"
            android:inputType="date"/>

        <EditText
            android:id="@+id/phone1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="              Enter Phone Number"
            android:inputType="phone" />

        <Spinner
            android:id="@+id/state1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:entries="@array/StateCodes"/>

        <EditText
            android:id="@+id/city1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="                   Enter City"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/address1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="                   Enter Address"
            android:inputType="textMultiLine"/>

        <EditText
            android:id="@+id/zipCode"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="                   Enter ZipCode"
            android:inputType="number"
            android:text="" />

        <EditText
            android:id="@+id/pass1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="   Enter Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/conpass1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="   ReEnter Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/userReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:text="Register"/>

    </LinearLayout>
</ScrollView>