<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.servemesystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".PlaceServiceRequest"></activity>
        <activity android:name=".ViewServiceRequest" />
        <activity
            android:name=".Homepage.UpdateProfile"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".Homepage.ServiceProviderHomeActivity"
            android:label="@string/title_activity_service_provider_home"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".Homepage.UserHomeActivity"
            android:label="@string/title_activity_user_home"
            android:theme="@style/Theme.AppCompat" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".UserRegistrationActivity" />
        <activity android:name=".ServiceProviderRegistrationActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".ForgotPassword" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>