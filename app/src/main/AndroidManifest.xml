<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.servemesystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".PendingAuthServiceProviderDetails"></activity>
        <activity android:name=".adminScreen.PendingAuthorizationAdapter" />
        <activity android:name=".adminScreen.ServiceProviderListAdapter" />
        <activity android:name=".AdminMainActivity" />
        <activity android:name=".OperaterDataView" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".UpdateProfileActivity" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".UserRegistrationActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".ServiceProviderHome" />
        <activity android:name=".ServiceProviderRegistrationActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>